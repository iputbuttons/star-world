{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": "./src",
    "strict": true,
    "paths": {
      "@app/*": ["app/*"],
      "@components/*": ["components/*"],
      "@configs/*": ["configs/*"]
    }
  },
  "include": [
    ".expo/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "expect-matchers.d.ts",
    "expo-env.d.ts"
  ]
}
